<h2><%= t "my_devise.registration_headline" %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, label: t('neo4j.attributes.user.email'), autofocus: true %>

  <%= f.password_field :password, label: t('neo4j.attributes.user.password'), autocomplete: "off" %>
  <% if @minimum_password_length %>
    <em>(<%= t "my_devise.characters_minimum", count: @minimum_password_length %>)</em>
  <% end %><br />

  <%= f.password_field :password_confirmation, label: t('neo4j.attributes.user.password_confirmation'), autocomplete: "off" %>
  <%= f.submit t("my_devise.registration_headline") %>
<% end %>

<%= render "devise/shared/links" %>
